@model RegisterViewModel

<h1>Identity Server - New User Registration</h1>
<form asp-controller="Auth" asp-action="Register" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div>
        <label>Username</label>
        <input asp-for="UserName" />
    </div>
    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Designation</label>
        <input asp-for="Designation" />
    </div>
    <div>
        <label>Team</label>
        <input asp-for="Team" />
    </div>
    <div>
        <label>Category</label>
        <input asp-for="Category" />
    </div>
    <div>
        <label>Location</label>
        <input asp-for="Location" />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" />
    </div>
    <div>
        <label>Confirm Password</label>
        <input asp-for="ConfirmPassword" />
    </div>
    <div>
        <button type="submit">Register</button>
    </div>
</form>
<div>
    <a asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Back to Login</a>
</div>